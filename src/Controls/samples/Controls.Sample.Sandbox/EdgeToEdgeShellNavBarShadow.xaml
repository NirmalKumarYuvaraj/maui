<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Maui.Controls.Sample"
       x:Class="Maui.Controls.Sample.EdgeToEdgeShellNavBarShadow"
       Title="Edge-to-Edge Shell NavBar Shadow"
       Shell.NavBarHasShadow="True"
       Shell.NavBarIsVisible="True">

    <ShellContent Title="NavBar Shadow"
                  ContentTemplate="{DataTemplate local:EdgeToEdgeTestPageForShell}"
                  Shell.NavBarHasShadow="True"/>

    <Shell.ToolbarItems>
        <ToolbarItem Text="Reset"
                     Command="{Binding ResetCommand}"/>
    </Shell.ToolbarItems>

</Shell>
