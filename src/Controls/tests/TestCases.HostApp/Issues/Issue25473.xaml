<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
				 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
				 xmlns:local="clr-namespace:Maui.Controls.Sample.Issues"
				 x:Class="Maui.Controls.Sample.Issues.Issue25473">

  <VerticalStackLayout>
    <!--The Entry control allows text input with ClearButtonVisibility initially set to 'Never' and a specified MinimumWidthRequest.-->
    <HorizontalStackLayout HorizontalOptions="Center">
      <Entry
        x:Name="MainEntryField"
        AutomationId="EntryField"
        Grid.Column="1"
        BackgroundColor="Transparent"
        ClearButtonVisibility="Never"
        FontSize="16"
        ReturnType="Search"
        IsSpellCheckEnabled="false"
        IsTextPredictionEnabled="false"
        Placeholder="Enter text"
        HorizontalOptions="Fill"
        VerticalOptions="Center"
        MinimumWidthRequest="300"
        VerticalTextAlignment="Center"/>
    </HorizontalStackLayout>
  </VerticalStackLayout>


</ContentPage>